<h2>Sign Up</h2>
<div class="input-group">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <div><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Your Email', :class => 'form-control input-lg' %></div>
  </div>

  <div class="form-group">
    <div><%= f.label :password %><br />
    <%= f.password_field :password, :placeholder => "Password", :class => 'form-control input-lg' %></div>
  </div>

  <div class="form-group">
    <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, :placeholder => "Password", :class => 'form-control input-lg' %></div>
  </div>

  <div class="form-group">
    <div><%= f.label :caregiver_name %><br />
    <%= f.text_field :caregiver_name, :placeholder => 'Your Name', :class => 'form-control input-lg' %></div>
  </div>
  <div class="form-group">
    <div><%= f.label :caregiver_phone %><br />
    <%= f.text_field :caregiver_phone, :placeholder => 'Your Phone Number', :class => 'form-control input-lg' %></div>
  </div>
  <br />
  <div class="form-group">
    <div><%= f.submit "Sign up", class: 'btn btn-primary btn-wide' %></div>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
